# Taskego Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Neon PostgreSQL Database (Free tier available)
DATABASE_URL=postgresql://username:password@ep-xxx-xxx-xxx.region.aws.neon.tech/taskego?sslmode=require

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Firebase Project Settings (https://console.firebase.google.com)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----"
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Client Config (for frontend)
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef123456

# =============================================================================
# OLLAMA CONFIGURATION (FREE AI)
# =============================================================================
# Ollama Server URL (self-hosted, completely free)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:13b

# For production deployment, use your server IP/domain:
# OLLAMA_BASE_URL=http://your-server-ip:11434
# OLLAMA_BASE_URL=https://ollama.yourdomain.com

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Stripe Keys (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (for legacy auth, optional)
JWT_SECRET=your-super-secret-jwt-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# OPTIONAL SERVICES (Can be disabled for MVP)
# =============================================================================
# OpenAI Configuration (paid alternative to Ollama)
# OPENAI_API_KEY=sk-...

# Cloudinary Configuration (image hosting alternative to Firebase)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Production URLs
# FRONTEND_URL=https://yourdomain.com
# BACKEND_URL=https://api.yourdomain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features for MVP
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_AI_ASSISTANT=true

# =============================================================================
# NOTES
# =============================================================================
# 1. DATABASE_URL: Get from Neon (https://neon.tech) - Free tier available
# 2. FIREBASE: Create project at https://console.firebase.google.com
# 3. OLLAMA: Self-hosted, completely free AI alternative
# 4. STRIPE: Optional for MVP, can use cash on delivery instead
# 5. Copy this file to .env and fill in your actual values
# 6. Never commit .env file to git (it's already in .gitignore)
